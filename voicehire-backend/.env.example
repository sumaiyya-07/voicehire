# ─────────────────────────────────────────
#  VoiceHire Backend — Environment Variables
#  Copy this file to .env and fill in values
# ─────────────────────────────────────────

# Server
PORT=5000
NODE_ENV=development

# JWT Secret — change this to a long random string
JWT_SECRET=voicehire_super_secret_jwt_key_change_this_in_production

# JWT expiry
JWT_EXPIRES_IN=7d

# Gemini API Key (get free key at aistudio.google.com)
GEMINI_API_KEY=your_gemini_api_key_here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
